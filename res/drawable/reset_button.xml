<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#3c0202"
                android:centerColor="#3c0202"
                android:startColor="#ff0000" />
            <stroke
                android:width="1dip"
                android:color="#000000" />
            <corners
                android:radius="3dip" />
            <padding
                android:left="0dip"
                android:top="0dip"
                android:right="0dip"
                android:bottom="0dip" />
        </shape>
    </item>

    <item>   
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#ff0000"
                android:centerColor="#3c0202"
                android:startColor="#3c0202" />
            <stroke
                android:width="1dip"
                android:color="#000000" />
            <corners
                android:radius="3dip" />
            <padding
                android:left="0dip"
                android:top="0dip"
                android:right="0dip"
                android:bottom="0dip" />
        </shape>
    </item>
</selector>