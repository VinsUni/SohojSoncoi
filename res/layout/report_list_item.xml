<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/itemTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_text"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />
	    
    <TextView 
        android:id="@+id/itemAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_text"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:layout_alignTop="@id/itemTotalLabel"
        android:layout_toRightOf="@id/itemTotalLabel" />
    
    <TextView 
        android:id="@+id/itemPlanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_text"
        android:layout_alignTop="@id/itemTotalLabel"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:layout_marginRight="10dp" />
    
    <ProgressBar 
        android:id="@+id/itemProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/itemTotalLabel"
        android:layout_alignRight="@id/itemPlanText"
        android:progressDrawable="@drawable/total_progress_bar"
        android:textColor="@color/white"
        android:layout_below="@id/itemTotalLabel" />

</RelativeLayout>
