<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Switch 
	    android:id="@+id/aeBaeButton"
	    android:layout_width="fill_parent"
	    android:layout_height="45dip"
	    android:textOn="Bae"
	    android:textOff="Ae"
	    android:layout_marginLeft="15dip"
	    android:layout_marginRight="15dip" />

    <TextView
        android:id="@+id/mulloLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/aeBaeButton"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="30dip"
        android:text="@string/test_text"
        android:textSize="20sp" />
    
    <EditText
		android:id="@+id/mulloEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/aeBaeButton"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />
    
    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/mulloLabel"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/mulloLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />
    
    <Button
		android:id="@+id/categoryButton"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/mulloEditText"
		android:layout_marginTop="10dip"
		android:layout_alignRight="@id/mulloEditText"
		android:text="@string/category_choose"
		android:textSize="14sp" />
    
    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/categoryLabel"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/mulloLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />
    
    <Button
		android:id="@+id/dateButton"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/categoryButton"
		android:layout_marginTop="10dip"
		android:layout_alignRight="@id/mulloEditText"
		android:text="@string/pick_date"
		android:textSize="14sp" />
    
    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/dateLabel"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/mulloLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />
    
    <EditText
		android:id="@+id/descriptionEditText"
		android:inputType="textMultiLine"
		android:layout_width="180dip"
		android:layout_height="100dip"
		android:layout_below="@id/dateButton"
		android:layout_marginTop="10dip"
		android:layout_alignRight="@id/mulloEditText"
		android:scrollHorizontally="true"
		android:maxLength="100"
		android:text="@string/test_text"
		android:background="@color/light_gray"
		android:gravity="top"
		android:textSize="14sp" />
    
    <TextView
        android:id="@+id/pictureLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/mulloLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />
    
    <ImageView
		android:id="@+id/imgPreview"
		android:layout_width="120dip"
		android:layout_height="160dip"
		android:layout_below="@id/descriptionEditText"
		android:layout_marginTop="10dip"
		android:layout_alignRight="@id/mulloEditText"
		android:contentDescription="@string/autoplay" />
    
    <Button
		android:id="@+id/pictureButton"
		android:layout_width="45dip"
		android:layout_height="45dip"
		android:layout_alignBottom="@id/imgPreview"
		android:layout_toLeftOf="@id/imgPreview"
		android:layout_marginRight="10dip"
		android:text="@string/test_text"
		android:background="@color/light_gray"
		android:textSize="14sp" />
    
    <Button
		android:id="@+id/saveButton"
		android:layout_width="80dip"
		android:layout_height="30dip"
		android:layout_below="@id/imgPreview"
		android:layout_marginTop="20dip"
		android:layout_marginLeft="20dip"
		android:layout_alignLeft="@id/mulloLabel"
		android:text="@string/test_text"
		android:background="@color/green"
		android:textSize="14sp" />
    
    <Button
		android:id="@+id/resetButton"
		android:layout_width="80dip"
		android:layout_height="30dip"
		android:layout_below="@id/imgPreview"
		android:layout_marginTop="20dip"
		android:layout_marginRight="20dip"
		android:layout_alignRight="@id/mulloEditText"
		android:text="@string/test_text"
		android:background="@color/red"
		android:textSize="14sp" />

</RelativeLayout>
</ScrollView>