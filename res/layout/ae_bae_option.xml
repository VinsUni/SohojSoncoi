<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="fill_vertical"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/KhabarLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="30dip"
        android:text="@string/test_text"
        android:textSize="20sp" />
    
    <EditText
		android:id="@+id/KhabarEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />
    
    <TextView
        android:id="@+id/PosakhLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/KhabarEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/PosakhEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/KhabarEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />
    
    <TextView
        android:id="@+id/BasosthanLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/PosakhEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/BasosthanEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/PosakhEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />

 <TextView
        android:id="@+id/JogajogLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/BasosthanEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/JogajogEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/BasosthanEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />

<TextView
        android:id="@+id/SikkhaLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/JogajogEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/SikkhaEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/JogajogEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />

<TextView
        android:id="@+id/KhelaLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/SikkhaEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/KhelaEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/SikkhaEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />

<TextView
        android:id="@+id/BinodonLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/KhelaEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/BinodonEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/KhelaEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />

<TextView
        android:id="@+id/GariLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/BinodonEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/GariEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/BinodonEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />

<TextView
        android:id="@+id/DoctorLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/GariEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/DoctorEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/GariEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />
    
    <TextView
        android:id="@+id/BillLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/DoctorEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/BillEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/DoctorEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />
    
<TextView
        android:id="@+id/BiniyogLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/BillEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/BiniyogEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/BillEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />

    <TextView
        android:id="@+id/SocialLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/BiniyogEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/SocialEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/BiniyogEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />

    <TextView
        android:id="@+id/LoanLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/SocialEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/LoanEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/SocialEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />    
    
<TextView
        android:id="@+id/OnnannoLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/LoanEditText"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/KhabarLabel"
        android:text="@string/test_text"
        android:textSize="20sp" />

    <EditText
		android:id="@+id/OnnannoEditText"
		android:layout_width="180dip"
		android:layout_height="30dip"
		android:layout_below="@id/LoanEditText"
		android:layout_marginTop="15dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="30dip"
		android:inputType="numberDecimal"
		android:background="@color/light_gray"
		android:textSize="20sp" />
    
    <Button
		android:id="@+id/saveButton"
		android:layout_width="80dip"
		android:layout_height="30dip"
		android:layout_below="@id/OnnannoEditText"
		android:layout_marginTop="20dip"
		android:layout_marginLeft="20dip"
		android:layout_alignLeft="@id/KhabarLabel"
		android:text="@string/test_text"
		android:background="@color/green"
		android:textSize="14sp" />
    
    <Button
		android:id="@+id/resetButton"
		android:layout_width="80dip"
		android:layout_height="30dip"
		android:layout_below="@id/OnnannoEditText"
		android:layout_marginTop="20dip"
		android:layout_marginRight="20dip"
		android:layout_alignRight="@id/OnnannoEditText"
		android:text="@string/test_text"
		android:background="@color/red"
		android:textSize="14sp" />

</RelativeLayout>
</ScrollView>