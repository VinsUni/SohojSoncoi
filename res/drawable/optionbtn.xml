<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#9696e8"
                android:centerColor="#535396"
                android:startColor="#9696e8" />
            <stroke
                android:width="1dip"
                android:color="#000000" />
            <corners
                android:radius="3dip" />
            <padding
                android:left="0dip"
                android:top="0dip"
                android:right="0dip"
                android:bottom="0dip" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#9696e8"
                android:startColor="#9696e8" />
            <stroke
                android:width="1dip"
                android:color="#000000" />
            <corners
                android:radius="3dip" />
            <padding
                android:left="0dip"
                android:top="0dip"
                android:right="0dip"
                android:bottom="0dip" />
        </shape>
    </item>
    
    <item>   
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#9696e8"
                android:centerColor="#393957"
                android:startColor="#9696e8" />
            <stroke
                android:width="1dip"
                android:color="#000000" />
            <corners
                android:radius="3dip" />
            <padding
                android:left="0dip"
                android:top="0dip"
                android:right="0dip"
                android:bottom="0dip" />
        </shape>
    </item>
</selector>