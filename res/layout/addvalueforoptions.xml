<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addvaluerootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/custom_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_color"
        android:orientation="horizontal" >
        
    	<Button
            android:id="@+id/optionbuttonay"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
        	android:layout_marginTop="5dp"
            android:background="@color/red"
            android:text="@string/test_text"
            android:textColor="@color/white"
            android:textSize="16sp" />

	    <Button
	        android:id="@+id/dailydatebutton"
	        android:layout_width="90dp"
	        android:layout_height="40dp"
	        android:background="@color/red"
	        android:layout_toLeftOf="@id/optionbuttonay"
	        android:layout_marginTop="5dp"
	        android:layout_marginRight="5dp"
	        android:text="@string/test_text"
	        android:textColor="@color/white"
	        android:textSize="16sp" />
    
        <Button
            android:id="@+id/optionbuttonbey"
            android:layout_width="90dp"
            android:layout_height="40dp"
			android:layout_toRightOf="@id/optionbuttonay"
        	android:layout_marginTop="5dp"
        	android:layout_marginLeft="5dp"
            android:background="@color/red"
            android:text="@string/test_text"
            android:textColor="@color/white"
            android:textSize="16sp" />
	</RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:listSelector="@android:color/transparent"               
		android:cacheColorHint="@android:color/transparent"
		android:choiceMode="none"
		android:divider="@android:color/transparent"
  		android:dividerHeight="10.0sp"
        android:background="@color/custom_color" >
    </ListView>

        

    <Button
        android:id="@+id/plansavebutton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/red"
        android:text="@string/test_text"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>
