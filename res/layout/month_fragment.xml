<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/piChartButton"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
       	android:layout_alignParentLeft="true" />
    
    <Button 
        android:id="@+id/lineChartButton"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
       	android:layout_alignParentRight="true" />
    
		<TextView
	        android:id="@+id/ajLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/piChartButton"
	        android:text="@string/test_text"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp" />    
    
	    <TextView
	        android:id="@+id/totalLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/test_text"
	        android:layout_below="@id/ajLabel"
	        android:layout_marginLeft="10dp" />
	    
	    <TextView 
	        android:id="@+id/amountText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/test_text"
	        android:layout_marginLeft="5dp"
	        android:layout_alignTop="@id/totalLabel"
	        android:layout_toRightOf="@id/totalLabel" />
	    
	    <TextView 
	        android:id="@+id/extraText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/test_text"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/red"
	        android:layout_alignTop="@id/totalLabel"
	        android:layout_toRightOf="@id/amountText" />
	    
	    <TextView 
	        android:id="@+id/planText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/test_text"
	        android:layout_alignTop="@id/totalLabel"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp" />

	    
	    <TextView 
	        android:id="@+id/planLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/test_text"
	        android:layout_above="@id/planText"
	        android:layout_marginBottom="2dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp" />
	    
	    <ProgressBar 
	        android:id="@+id/totalProgressBar"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@id/totalLabel"
	        android:layout_alignRight="@id/planText"
	        android:progressDrawable="@drawable/total_progress_bar"
	        android:layout_below="@id/totalLabel" />

	    <ExpandableListView
                android:id="@+id/aeBaeLV"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@id/totalProgressBar"
                android:layout_marginTop="10dp" />

</RelativeLayout>
